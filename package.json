{
  "name": "expo-app",
  "version": "1.0.0",
  "main": "./index.js",
  "scripts": {
    "start": "expo start",
    "test": "jest",
    "start-web": "expo start --web",
    "start-web-dev": "expo start --web",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm start",
    "dev:backend": "cd backend && npm run dev",
    "dev:stop": "pkill -f \"expo\\|node.*server.js\" || true",
    "dev:reset": "./scripts/setup-development.sh --reset",
    "dev:clean": "rm -rf node_modules && npm install",
    "lint": "expo lint",
    "lint:fix": "npm run lint -- --fix",
    "start:web": "expo start --web",
    "deploy": "./scripts/deploy.sh",
    "deploy:local": "./scripts/deploy.sh --env LOCAL",
    "deploy:prod": "APP_ENV=PROD ./scripts/deploy.sh --force",
    "deploy:validate": "./scripts/deploy.sh --validate",
    "deploy:dry-run": "./scripts/deploy.sh --dry-run",
    "deploy:status": "echo \"Deployment status...\"",
    "deploy:frontend": "./scripts/deploy-frontend.sh",
    "deploy:frontend:local": "./scripts/deploy-frontend.sh --env LOCAL",
    "deploy:frontend:prod": "./scripts/deploy-frontend.sh --env PROD",
    "deploy:backend": "./scripts/deploy-backend.sh",
    "deploy:backend:local": "./scripts/deploy-backend.sh --env LOCAL",
    "deploy:backend:prod": "./scripts/deploy-backend.sh --env PROD",
    "deploy:backend:migrate": "./scripts/deploy-backend.sh --env LOCAL --migrate-only",
    "deploy:db": "./scripts/deploy-database.sh",
    "deploy:db:local": "./scripts/deploy-database.sh --env LOCAL",
    "deploy:db:prod": "./scripts/deploy-database.sh --env PROD --backup",
    "deploy:db:status": "./scripts/deploy-database.sh --env LOCAL --status",
    "deploy:db:backup": "./scripts/deploy-database.sh --env LOCAL --backup",
    "rollback": "./scripts/rollback.sh",
    "rollback:prod": "./scripts/rollback.sh --env PROD --force",
    "rollback:list": "./scripts/rollback.sh --list",
    "rollback:frontend": "./scripts/rollback.sh --components frontend",
    "rollback:backend": "./scripts/rollback.sh --components backend",
    "rollback:database": "./scripts/rollback.sh --components database",
    "env:setup:local": "./scripts/setup-development.sh",
    "env:setup:prod": "./scripts/setup-production.sh",
    "env:setup:prod:validate": "./scripts/setup-production.sh --validate-only",
    "env:switch:local": "./scripts/switch-environment.sh --to LOCAL",
    "env:switch:prod": "./scripts/switch-environment.sh --to PROD",
    "env:switch:auto": "./scripts/switch-environment.sh --auto",
    "env:status": "./scripts/switch-environment.sh",
    "infra:setup": "./scripts/deploy-infrastructure.sh",
    "infra:deploy": "./scripts/deploy-infrastructure.sh --deploy",
    "infra:validate": "./scripts/deploy-infrastructure.sh --validate",
    "monitor:setup": "./scripts/setup-monitoring.sh",
    "backup:create": "./scripts/backup-database.sh",
    "backup:list": "./scripts/backup-database.sh --list",
    "health:check": "curl -s http://localhost:3001/health && echo \"Backend OK\" || echo \"Backend FAIL\"",
    "health:full": "npm run health:check && npm run deploy:validate",
    "ci:build": "cd backend && npm run build",
    "ci:deploy": "./scripts/deploy.sh --env PROD --force --skip-tests",
    "prepare": "husky",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@nkzw/create-context-hook": "^1.1.0",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/netinfo": "11.4.1",
    "@supabase/supabase-js": "^2.81.1",
    "@tanstack/react-query": "^5.83.0",
    "axios": "^1.13.2",
    "crypto-js": "^4.2.0",
    "expo": "~54.0.27",
    "expo-blur": "~15.0.8",
    "expo-constants": "~18.0.11",
    "expo-device": "~8.0.10",
    "expo-font": "~14.0.10",
    "expo-haptics": "~15.0.8",
    "expo-image": "~3.0.11",
    "expo-image-picker": "~17.0.9",
    "expo-linear-gradient": "~15.0.8",
    "expo-linking": "~8.0.10",
    "expo-local-authentication": "~17.0.8",
    "expo-location": "~19.0.8",
    "expo-notifications": "~0.32.14",
    "expo-router": "~6.0.17",
    "expo-splash-screen": "~31.0.12",
    "expo-status-bar": "~3.0.9",
    "expo-symbols": "~1.0.8",
    "expo-system-ui": "~6.0.9",
    "expo-web-browser": "~15.0.10",
    "nativewind": "^4.1.23",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-get-random-values": "~1.11.0",
    "react-native-gifted-charts": "^1.4.70",
    "react-native-iap": "^14.5.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-nitro-modules": "^0.31.10",
    "react-native-safe-area-context": "5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-web": "^0.21.0",
    "react-native-webview": "13.15.0",
    "use-latest-callback": "^0.3.2",
    "zod": "^3.25.76",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@expo/ngrok": "^4.1.3",
    "@react-native-community/cli": "^20.0.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.0.0",
    "@types/react": "~19.1.10",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint": "^9.31.0",
    "eslint-config-expo": "~10.0.0",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "expo-module-scripts": "^5.0.7",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.14",
    "lint-staged": "^16.2.7",
    "react-native-bundle-visualizer": "^3.1.3",
    "react-test-renderer": "^19.1.0",
    "typescript": "~5.9.2"
  },
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "app/**/*.{js,jsx,ts,tsx}": [
      "expo lint --fix"
    ],
    "backend/**/*.js": [
      "cd backend && npx eslint --fix"
    ]
  }
}
