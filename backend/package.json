{
  "name": "offscreen-buddy-backend",
  "version": "1.0.0",
  "description": "OffScreen Buddy Backend API with Payment Integration and Performance Optimization",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:performance": "node scripts/performance-test.js",
    "benchmark": "node scripts/benchmark.js",
    "test:caching": "node scripts/test-caching.js",
    "test:memory": "node scripts/test-memory.js",
    "performance:monitor": "node scripts/performance-monitor.js",
    "benchmark:api": "artillery run scripts/benchmark-config.yml",
    "profile:memory": "node --inspect scripts/memory-profiler.js",
    "optimize": "node scripts/optimize.js",
    "cache:warm": "node scripts/warm-cache.js",
    "performance:report": "node scripts/generate-performance-report.js",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.81.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "redis": "^4.6.10",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "lru-cache": "^10.0.1",
    "p-limit": "^4.0.0",
    "mem": "^5.1.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "@types/jest": "29.5.14",
    "ts-jest": "^29.1.1",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.3",
    "puppeteer": "^21.1.1",
    "lighthouse": "^11.2.0",
    "speed-measure-webpack-plugin": "^1.5.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "v8-profiler-next": "^1.10.0",
    "clinic": "^12.1.0",
    "artillery": "^2.0.0",
    "webpack-bundle-analyzer": "^4.9.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "timer",
    "productivity",
    "pomodoro",
    "subscription",
    "payment",
    "payu",
    "upi",
    "net-banking",
    "performance",
    "optimization",
    "caching",
    "monitoring"
  ],
  "author": "OffScreen Buddy Team",
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "logs/*",
      "*.log",
      "reports/*",
      "cache/*"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/logs/**",
      "!**/reports/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}